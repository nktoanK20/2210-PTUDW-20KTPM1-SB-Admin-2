<div class="container rounded bg-white mt-5 mb-5">
    <div class="row">
        <form class="col-md-12 border-right" action="/product-create" method='POST'>
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Add New Product</h4>
                    {{#if message}}
                    <h4 class="text-success">{{message}}</h4>
                    {{/if}}
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label class="labels">Name</label>
                        <input type="text" class="form-control" name="name" placeholder="" value='' required="true">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Description</label>
                        <textarea type="text" class="form-control" name="description" placeholder="" rows="4"
                            cols="10"></textarea>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Specification</label>
                        <textarea type="text" class="form-control" name="specification" placeholder="" rows="4"
                            cols="20"></textarea>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Quantity</label>
                        <input type="number" class="form-control" name="quantity" value="" placeholder=""
                            required="true"></input>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Thumbnail Link</label>
                        <input type="text" class="form-control" name="thumbnail" placeholder="" value="">
                    </div>
                    <div class="col-md-12 image-link-field-wrapper">
                        <label class="labels">Images Links</label>
                        <div class="row">
                            <div class="pt-2 pl-3">
                                <a onclick="addImageLinkField(this)" class="add-button" title="Add Field"><i
                                        class="fa fa-plus" aria-hidden="true"></i></i></a>
                            </div>
                            <div class="col-md">
                                <input type="text" class="form-control" name="images[]" placeholder="" value="">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Category</label>
                        <div class="d-flex">
                            <select class="form-control category-selection" name="category">
                                {{#each categories}}
                                <option value={{this.name}}>{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Brand</label>
                        <input type="text" class="form-control" name="brand" placeholder="" value="" required="true">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Price</label>
                        <input type="number" class="form-control" name="price" placeholder="" value="" required="true">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Total Purchase</label>
                        <input type="number" class="form-control" name="totalPurchase" placeholder="" value=""
                            required="true">
                    </div>
                    <div class="col-md-12">
                        <label class="labels">Status</label>
                        <div class="d-flex">
                            <select class="form-control status-selection" name="status">
                                <option value="OnStock">On Stock</option>
                                <option value="OutOfStock">Out Of Stock</option>
                                <option value="Suspended">Suspended</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-12">

                    </div>
                </div>
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Create Product</button>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
    function addImageLinkField(e) {
        var addButton = $('.add-button');
        var wrapper = $('.image-link-field-wrapper');
        var fieldHTML = `<div class="row mt-2">
                            <div class="pt-2 pl-3">
                                <a onclick="removeImageLinkField(this)" class="remove-button" title="Remove Field">
                                    <i class="fa fa-minus" aria-hidden="true"></i></a>
                            </div>
                            <div class="col-md">
                                <input type="text" class="form-control" name="images[]" placeholder=""
                                    value="">
                            </div>
                        </div>`;

        wrapper.append(fieldHTML);
    }

    function removeImageLinkField(e) {
        e.parentElement.parentElement.remove();
    }
</script>